pipeline {
	agent any
	stages {
		stage('clean') {
			steps {
				checkout scm
				env.JAVA_HOME="/usr/lib/jvm/java-8-openjdk-amd64"
				env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"
				sh "cd 'tomcat' ; mvn 'clean'"
			}
		}
		stage('compile') {
			steps {
				sh "cd 'tomcat' ; mvn 'compile'"
			}
		}
		stage('test') {
			steps {
				sh "cd 'tomcat' ; mvn test"
			}
		}
		stage('assembly') {
			steps {
				sh "cd 'tomcat' ; mvn clean compile assembly:single"
			}
		}
	}
}

